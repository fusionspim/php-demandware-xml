{
  "name": "fusionspim/php-demandware-xml",
  "description": "PHP library for working with Demandware XML files",
  "license": "MIT",
  "keywords": [
    "demandware",
    "ecommerce",
    "export",
    "php",
    "xml"
  ],
  "require": {
    "php": "^8.0",
    "ext-SimpleXML": "^8.0",
    "ext-json": "^8.0",
    "ext-libxml": "^8.0",
    "ext-xmlreader": "^8.0",
    "ext-xmlwriter": "^8.0"
  },
  "require-dev": {
    "ergebnis/composer-normalize": "^2.6",
    "fusionspim/pint-coding-style": "^1.0",
    "laravel/pint": "^1.2",
    "phpunit/phpunit": "9.5.*"
  },
  "autoload": {
    "psr-4": {
      "DemandwareXml\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DemandwareXml\\Test\\": "tests"
    }
  },
  "config": {
    "allow-plugins": {
      "ergebnis/composer-normalize": true
    }
  },
  "scripts": {
    "fix": [
      "composer fix-cs",
      "composer normalize"
    ],
    "fix-cs": [
      "pint --config vendor/fusionspim/pint-coding-style/pint.json"
    ],
    "test": [
      "phpunit --stop-on-failure --stop-on-error"
    ]
  }
}
